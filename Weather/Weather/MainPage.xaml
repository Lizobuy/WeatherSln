<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather.MainPage" BackgroundImageSource="Background.jpe">

    <StackLayout>
        <Grid>
        <Label Text="{Binding main.temp}"
               HorizontalOptions="CenterAndExpand"/>
            <Label Text="{Binding main.humidity}"
               HorizontalOptions="CenterAndExpand"/>
            <Label Text="{Binding main.pressure}"
               HorizontalOptions="CenterAndExpand"/>
            <Label Text="{Binding clouds.all}"
               HorizontalOptions="CenterAndExpand"/>
            <Label Text="{Binding speed.wind}"
               HorizontalOptions="CenterAndExpand"/>
        </Grid>
    </StackLayout>

</ContentPage>
